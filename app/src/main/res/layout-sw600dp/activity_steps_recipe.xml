<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".steps_recipe">

    <fragment
        android:id="@+id/master_fragment_list2"
        android:name="com.example.baking.MasterFragmentList"
        android:layout_width="640dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </fragment>


    <LinearLayout
        android:layout_width="640dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/master_fragment_list2"
        app:layout_constraintTop_toTopOf="@+id/master_fragment_list2">

        <FrameLayout
            android:id="@+id/tv_video_frameLyaout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerInside" />

        <FrameLayout
            android:id="@+id/step_description"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>